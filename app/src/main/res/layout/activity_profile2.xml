<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.ProfileActivity">

    <EditText
        android:id="@+id/fullnameTbx"
        android:hint="Full Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/establishmentTbx"
        android:hint="Establishment"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullnameTbx" />

    <CheckBox
        android:id="@+id/updateLocationChx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@+id/establishmentTbx"/>

    <Button
        android:id="@+id/saveBtn"
        android:text="Save Profile"
        app:layout_constraintTop_toBottomOf="@+id/updateLocationChx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>